package com.vcube.assignment;


import java.util.Scanner;

public class GuessTheRandomNo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
int random= (int)(Math.random()*10);

Scanner sc=new Scanner(System.in);
int user_guess=0;
for (int i = 0; i < 3; i++) {
	System.out.println("guess the single digit number");
	 user_guess =sc.nextInt();
	if (random==user_guess) {
		System.out.println("you won the guessing game");
	}else {
		System.out.println("please try again you left only "+(3-i+1)+" chances");
	}
	
	
}
System.out.println("given number: "+user_guess+ " Random generated: "+random  );
System.out.println("you ran out of chances and lost the game aswell" );
	}

}
