package ifelse_and_switch;

import java.util.Scanner;

public class SwitchCase {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		
	Double doubl=sc.nextDouble();
	 switch (doubl) {
	case 1.0:{
		System.out.println("monday");
		System.out.println("is lazy day");
		Boolean bol=sc.nextBoolean();
		switch (bol) {
		case true:
			System.out.println("play activity");
			break;
		case false:
			System.out.println("play activity");
			break;

		
		};
		System.out.println("done with playing ?");
		String bol1=sc.next();
		switch (bol1) {
		case "false":
			System.out.println("continue playing activity");
			break;
		case "true":
			System.out.println("continue playing activity");
			break;
			
		default:
			break;
		}
		break;}
	case 2:
		System.out.println("tuseday");
		System.out.println("work mode day");
		System.out.println("im on it");
		String bol2=sc.next();
		switch (bol2) {
		case "false":
			System.out.println("continue playing activity");
			break;
		case "true":
			System.out.println("come and work");
			break;
			
		default:
			break;
		};
		System.out.println("done?");
		String bol3=sc.next();
		switch (bol3) {
		case "false":
			System.out.println("i hope you are ready");
			break;
		case "true":
			System.out.println("come and work");
			break;
			
		default:
			break;
		}
		break;
	case 3:
		System.out.println("wednesday");
		break;
	case 4:
		System.out.println("thursdat");
		break;
	
	default:
		System.out.println("invalid number");
//		break;
	}
	 sc.close();
	}

}
