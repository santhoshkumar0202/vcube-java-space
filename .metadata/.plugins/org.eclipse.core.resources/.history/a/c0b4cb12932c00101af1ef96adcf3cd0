package com.vcube.assignment;

import java.util.Iterator;
import java.util.Scanner;

public class Assihnment_08_05_25 {
	/*
	 * 1.You are developing a simple console-based food ordering system. The program
	 * should allow users to enter a number from 1 to 5 to select a food item from
	 * the menu. Based on the user's input, the program should display the name and
	 * price of the selected item. If the input is not between 1 and 5, it should
	 * display "Invalid choice."
	 */

	public static void main(String[] args) {
//orderKarobestokes();
jobCategory();
	}

static	public void orderKarobestokes() {

		Scanner sc = new Scanner(System.in);
		System.out.println("how many items you want to order");
		int items = sc.nextInt();

		for (int i = 1; i <= items; i++) {

			System.out.println(" please enter you items " + i + " number");
			int value = sc.nextInt();
//	 int [] arr= {10,20};
			if (i == items) {
				switch (value) {
				case 1 -> System.out.println("item :- Biryani and price:- 280");
				case 2 -> System.out.println("item :- Mandi and price:- 680");
				case 3 -> System.out.println("item :- Pizza and price:- 380");
				case 4 -> System.out.println("item :- Burgger and price:- 180");
				case 5 -> System.out.println("item :- Bagara rice  and price:- 290");
				default -> System.out.println("selected wrong choice");
				}
			}
		}

	}

static public void jobCategory() {
	Scanner sc = new Scanner(System.in);
	System.out.println("specify the job which are programmer,designers  and enter job you are looking for");
	String job=sc.next();
	switch (job) {
	case "programmer"->{ System.out.println("selected programmer \nenter the language : ");
	String programmer_job=sc.next();
		switch(programmer_job) {
	
		case "java" ->System.out.println("you are java developer");
		case "python" ->System.out.println("you are python developer");
		default->System.out.println("invalid programmer job");
		
		}
		
	}
	
	case "designer"->{System.out.println("selecte designer :- ui/ux or graphic designer");
	String designer_job=sc.next();
	switch(designer_job) {
	case "ui/ux" ->System.out.println("you have selected ui/ux designer");
	case "graphic designer" ->System.out.println("you have selected graphic designer");
	default->System.out.println(" invalid designer job");
	}
	}

	default ->System.out.println("there are no opening for these or invalid input");
		
	}
	
}
}
