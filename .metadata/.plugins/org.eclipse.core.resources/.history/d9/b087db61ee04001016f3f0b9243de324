package com.vcube;

 class DataMethods {
	// here we define the instance variables and static variables
	// instance variable
	int playerid;
	String playername;
//static variables
	static int countryId;
	static String countryName;

	public static void main(String[] args) {
		countryId = 91;
		countryName="india";
		System.out.println("hello, static vaiable calling below");
		System.out.println(countryId);
		System.out.println(countryName);
		// instance variable accessing
		DataMethods playerDetails = new DataMethods();
		playerDetails.playerid = 20;
		playerDetails.playername = "dhoni";
		System.out.println(playerDetails.playerid);
		System.out.println(playerDetails.playername);

	}
}
