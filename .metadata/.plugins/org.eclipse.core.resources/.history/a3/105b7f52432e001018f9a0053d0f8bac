package com.vcube.arrays;

import java.util.Scanner;

// Array class
public class Arrays {
	// initiating instance variable
	String name;
	int quantity;
	int price;

	// parameterized constructor method;
	public Arrays(String name, int quantity, int price) {
//		super();
		this.name = name;
		this.quantity = quantity;
		this.price = price;
	}

	public static void main(String[] args) {
		// main method start from here
		System.out.println("SUPER MARKET BILLING SYSTEM");
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter The number iten you want specify here".toUpperCase());
		int item_count = sc.nextInt();
		Arrays[] arr = new Arrays[item_count];

// loop iterater and takes the values from console and create object for every item

		for (int i = 0; i < arr.length; i++) {
			System.out.println("please enter details *******************".toUpperCase());
			System.out.println("please enter name of product ".toUpperCase() + (i + 1));
			sc.nextLine();
			String nme = sc.nextLine();
			System.out.println("please enter qnty".toUpperCase());
			int qnt = sc.nextInt();
			System.out.println("please enter price".toUpperCase());
			int price = sc.nextInt();
			arr[i] = new Arrays(nme, qnt, price);

		}
		// initiating the total to track the count
		int total = 0;

		// forlopp for iterating over array and accessing the obj.members

		for (Arrays a : arr) {
			System.out.println("NAME: " + a.name + "; QUANTITY: " + a.quantity + "; PRICE: " + a.price + "; SUBTOTAL: "
					+ a.subtotal());
			total += a.subtotal();

		}
		int actual_price = total;
		
		System.out.println("grand total :".toUpperCase() + (actual_price));
		int discount=0;
		// condition for discount based up on their grand total bill
		if (total >= 5000) {
			 discount = (total * 10 / 100);

			System.out.println("final payable :".toUpperCase() + (total));
			System.out.println("discount of 10% :".toUpperCase() + (actual_price - discount));
		} else if (total >= 2000 && total <= 4999) {
			discount =  (total * 5 / 100);

			System.out.println("final payable :".toUpperCase() + (total));
			System.out.println("discount of 5% :".toUpperCase() + (actual_price - discount));
		} else {
			System.out.println("final payable :".toUpperCase() + (total));
		}
	}
	
	//instance method to find out the sub of individual item

	int subtotal() {

		int subtotal = price * quantity;
		return subtotal;
	}

}
