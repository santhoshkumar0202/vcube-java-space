package com.vcube.arrays;

import java.util.Scanner;

import javax.sql.rowset.JoinRowSet;
import javax.swing.Renderer;
import javax.swing.plaf.basic.BasicInternalFrameTitlePane.IconifyAction;

// Array class
public class Arrays {
	// initiating instance variable
	String name;
	int quantity;
	int price;
static	Scanner sc = new Scanner(System.in);

	// parameterized constructor method;


	public Arrays(String name, int quantity, int price) {
//		super();
		this.name = name;
		this.quantity = quantity;
		this.price = price;
	}

	public static void main(String[] args) {
		// main method start from here
		String l="s";
		if(l=="hello"){
		System.out.println("SUPER MARKET BILLING SYSTEM");
		
		System.out.println("Enter The number iten you want specify here".toUpperCase());
		int item_count = sc.nextInt();
		Arrays[] arr = new Arrays[item_count];

// loop iterater and takes the values from console and create object for every item

		for (int i = 0; i < arr.length; i++) {
			System.out.println("please enter details *******************".toUpperCase());
			System.out.println("please enter name of product ".toUpperCase() + (i + 1));
			sc.nextLine();
			String nme = sc.nextLine();
			System.out.println("please enter qnty".toUpperCase());
			int qnt = sc.nextInt();
			System.out.println("please enter price".toUpperCase());
			int price = sc.nextInt();
			arr[i] = new Arrays(nme, qnt, price);

		}
		// initiating the total to track the count
		int total = 0;

		// forlopp for iterating over array and accessing the obj.members

		for (Arrays a : arr) {
			System.out.println("NAME: " + a.name + "; QUANTITY: " + a.quantity + "; PRICE: " + a.price + "; SUBTOTAL: "
					+ a.subtotal());
			total += a.subtotal();

		}
		
		
		
		System.out.println("grand total :".toUpperCase() + (total));
		int discount=0;
		// condition for discount based up on their grand total bill
		if (total >= 5000) {
			 discount = (total * 10 / 100);

			System.out.println("final payable :".toUpperCase() + (total-discount));
			System.out.println("discount of 10% :".toUpperCase() + ( discount));
		} else if (total >= 2000 && total <= 4999) {
			discount =  (total * 5 / 100);

			System.out.println("final payable :".toUpperCase() + (total-discount));
			System.out.println("discount of 5% :".toUpperCase() + (discount));
		} else {
			System.out.println("final payable :".toUpperCase() + (total));
		}
		
	}
		
		billingwithoutarry();
	}
	
	//instance method to find out the sub of individual item

	int subtotal() {

		int subtotal = price * quantity;
		return subtotal;
	}
	
 static int billingwithoutarry(){
	 System.out.println("billing counter management".toUpperCase());
	 System.out.println("enter number of items you want to end".toUpperCase());
	 int item_count=sc.nextInt();
	int sub_total=0;
	int grand_total=0;
	 for(int i=0 ;i<item_count;i++){
		 System.out.println("please enter details *******************".toUpperCase());
			System.out.println("please enter name of product ".toUpperCase() + (i + 1));
			sc.nextLine();
			String nme = sc.nextLine();
			System.out.println("please enter qnty".toUpperCase());
			int qnt = sc.nextInt();
			System.out.println("please enter price".toUpperCase());
			int price = sc.nextInt();
			sub_total=qnt*price;
			System.out.println("sub total: "+sub_total);
			grand_total+=subtotal();
		
	 }
	 int discount=0;
	 if(grand_total>=5000) {
		 discount=grand_total*10/100;
		 System.out.println("grand total: "+grand_total);
		 System.out.println("discount of 10%: "+discount);
		 System.out.println("final price: "+(grand_total-discount));
	 }
	 
	 return item_count;
	
 }
	
	

}
