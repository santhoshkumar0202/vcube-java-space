package com.vcube.arrays;

import java.util.Scanner;

public class Arrays {
	String name;
	int quantity;
	int price;

	public Arrays(String name, int quantity, int price) {
//		super();
		this.name = name;
		this.quantity = quantity;
		this.price = price;
	}

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		Arrays[] arr = new Arrays[2];

		for (int i = 0; i < arr.length; i++) {
			System.out.println("please enter details *******************");
			System.out.println("please enter name of product " + i);
			String nme = sc.next();
			System.out.println("please enter qnty");
			int qnt = sc.nextInt();
			System.out.println("please enter price");
			int price = sc.nextInt();
			arr[i] = new Arrays(nme, qnt, price);

		}
		int total = 0;

		for (Arrays a : arr) {
			System.out.println("name :" + a.name + " quantity: " + a.quantity + " price: " + a.price + " subtotal: "
					+ a.subtotal());
			total += a.subtotal();

		}
		int actual_price = total;
		System.out.println("grand total :" + (actual_price));
		if (total >= 5000) {
			total = total - (total * 10 / 100);
		
		System.out.println("final payable :" + (total));
		System.out.println("discount of 10% :" + (actual_price - total));
		}else if(total>=2000 && total<=4999){
			total = total - (total * 5/ 100);
			
			System.out.println("final payable :" + (total));
			System.out.println("discount of 5% :" + (actual_price - total));
		}else {
			System.out.println("final payable :" + (total));
		}
	}

	int subtotal() {

		int subtotal = price * quantity;
		return subtotal;
	}

}
