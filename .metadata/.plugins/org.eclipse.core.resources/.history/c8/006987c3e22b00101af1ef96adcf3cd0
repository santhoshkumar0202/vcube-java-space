	 */

	public static void main(String[] args) {
		// TODO Auto-generated method 
Scanner sc=new Scanner(System.in);
System.out.println("how many items you want to order");
int items=sc.nextInt();

/*
 items=3
 
 
 
 */
 for (int i = 1; i <= items; i++) {
	 int j=items;
	 System.out.println(" please enter you items"+i +" number");
	 int value=sc.nextInt();
	 if(i==items) {
		switch (value) {
		case 1 -> System.out.println("item :- Biryani and price:- 280");
		case 2 -> System.out.println("item :- Mandi and price:- 680");
		case 3 -> System.out.println("item :- Pizza and price:- 380");
		case 4 -> System.out.println("item :- Burgger and price:- 180");
		case 5 -> System.out.println("item :- Bagara rice  and price:- 290");
		default -> System.out.println("selected wrong choice");
		}
	 }
}
		
		
	}

